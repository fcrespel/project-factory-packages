<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:p="http://www.springframework.org/schema/p"
	   xmlns:c="http://www.springframework.org/schema/c"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="pooledLdapConnectionFactory"
		class="org.ldaptive.pool.PooledConnectionFactory"
		p:connectionPool-ref="ldapConnectionPool"
	/>

	<bean id="ldapConnectionPool"
		class="org.ldaptive.pool.BlockingConnectionPool"
		p:blockWaitTime="${ldap.pool.blockWaitTime}"
		p:connectionFactory-ref="ldapConnectionFactory"
		p:failFastInitialize="true"
		p:poolConfig-ref="ldapConnectionPoolConfig"
		p:pruneStrategy-ref="ldapConnectionPoolPruneStrategy"
		p:validator-ref="ldapConnectionPoolValidator"
		init-method="initialize"
	/>

	<bean id="ldapConnectionPoolConfig"
		class="org.ldaptive.pool.PoolConfig"
		p:minPoolSize="${ldap.pool.maxSize}"
		p:maxPoolSize="${ldap.pool.minSize}"
		p:validateOnCheckOut="${ldap.pool.validateOnCheckout}"
		p:validatePeriodically="${ldap.pool.validatePeriodically}"
		p:validatePeriod="${ldap.pool.validatePeriod}"
	/>

	<bean id="ldapConnectionPoolPruneStrategy"
		class="org.ldaptive.pool.IdlePruneStrategy"
		p:idleTime="${ldap.pool.idleTime}"
		p:prunePeriod="${ldap.pool.prunePeriod}"
	/>

	<bean id="ldapConnectionPoolValidator"
		class="org.ldaptive.pool.SearchValidator"
	/>

	<bean id="ldapConnectionFactory"
		class="org.ldaptive.DefaultConnectionFactory"
		p:connectionConfig-ref="ldapConnectionConfig"
	/>

	<bean id="ldapConnectionConfig"
		class="org.ldaptive.ConnectionConfig"
		p:connectionInitializer-ref="ldapConnectionInitializer"
		p:connectTimeout="${ldap.connectTimeout}"
		p:ldapUrl="${ldap.url}"
		p:useSSL="${ldap.use.ssl:false}"
		p:useStartTLS="${ldap.useStartTLS}"
	/>

	<bean id="ldapConnectionInitializer"
		class="org.ldaptive.BindConnectionInitializer"
		p:bindDn="${ldap.managerDn}"
		p:bindCredential="${ldap.managerPassword}"
	/>

</beans>