@{package.log}/svn_log {
    missingok
    notifempty
    weekly
    rotate 52
    dateext
    compress
    delaycompress
    create 0644 @{httpd.user} @{httpd.group}
    sharedscripts
    postrotate
        /sbin/service @{httpd.service} reload > /dev/null 2>/dev/null || true
    endscript
}

@{package.log}/ldap_sync.log {
    missingok
    notifempty
    weekly
    rotate 52
    dateext
    compress
    delaycompress
    create 0644 @{product.user} @{product.group}
}
