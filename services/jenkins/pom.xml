									<artifactId>gitlab-hook</artifactId>
									<version>1.4.0</version>
									<type>hpi</type>
								</artifactItem>
								<artifactItem>
									<groupId>org.jenkins-ci.plugins</groupId>
									<artifactId>greenballs</artifactId>
									<version>1.15</version>
									<type>hpi</type>
								</artifactItem>
								<artifactItem>
									<groupId>org.jenkins-ci.plugins</groupId>
									<artifactId>htmlpublisher</artifactId>
									<version>1.4</version>
									<type>hpi</type>
								</artifactItem>
								<artifactItem>
									<groupId>org.jenkins-ci.plugins</groupId>
									<artifactId>jdepend</artifactId>
