									<artifactId>sidebar-link</artifactId>
									<version>1.7</version>
									<type>hpi</type>
								</artifactItem>
								<artifactItem>
									<groupId>org.jenkins-ci.plugins</groupId>
									<artifactId>sonar</artifactId>
									<version>2.2.1</version>
									<type>hpi</type>
								</artifactItem>
								<artifactItem>
									<groupId>org.jenkins-ci.plugins</groupId>
									<artifactId>testlink</artifactId>
									<version>3.11</version>
									<type>hpi</type>
								</artifactItem>
								<artifactItem>
									<groupId>org.jenkins-ci.plugins</groupId>
									<artifactId>throttle-concurrents</artifactId>
									<version>1.8.4</version>
									<type>hpi</type>
								</artifactItem>
								<artifactItem>
									<groupId>org.jenkins-ci.plugins</groupId>
									<artifactId>token-macro</artifactId>
									<version>1.11</version>
									<type>hpi</type>
								</artifactItem>
								<artifactItem>
									<groupId>org.jenkins-ci.plugins</groupId>
									<artifactId>violations</artifactId>
									<version>0.7.11</version>
									<type>hpi</type>
								</artifactItem>
								<artifactItem>
									<groupId>org.jenkins-ci.plugins</groupId>
									<artifactId>xunit</artifactId>
									<version>1.96</version>
									<type>hpi</type>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>